<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.haikal.materialdesign2.AndroidSpeech.SpeechActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/EditTextSpeech"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Input Text To Speech"/>
        <Button
            android:textColor="@android:color/white"
            android:id="@+id/btn_scpeech"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Speech"
            android:layout_margin="20dp"
            android:theme="@style/MyButton"/>

    </LinearLayout>
    <com.google.android.gms.ads.AdView
        android:id="@+id/admod_Speech"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/admod_Speech"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
